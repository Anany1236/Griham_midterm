{
    "messages": [
        {
            "role": "system",
            "content": "You are a helpful assistant with access to the following functions to help the user. You can use the functions if needed."
        },
        {
            "role": "user",
            "content": "In my Hall TV open Netflix and play the Office"
        },
        {
            "role": "assistant",
            "tool_calls": [
                {
                    "type": "function",
                    "function": [
                        {
                            "name": "media_play",
                            "arguments": {
                                "device": "TV",
                                "room": "Hall",
                                "appname": "Netflix",
                                "title": "the Office"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "role": "tool",
            "content": {
                "status": "success"
            }
        },
        {
            "role": "assistant",
            "content": "The Hall TV has started playing the Office on Netflix."
        }
    ],
    "tools": [
        {
            "type": "function",
            "function": [
                {
                    "name": "application_launch",
                    "description": "This function is used to launch an application on TV device.",
                    "parameters": {
                        "type": "object",
                        "properties": {
                            "device": {
                                "type": "string",
                                "description": "Target device to be used."
                            },
                            "appname": {
                                "type": "string",
                                "description": "Target application to be used"
                            },
                            "title": {
                                "type": "string",
                                "description": "Target title to be searched and played"
                            }
                        },
                        "required": [
                            "device",
                            "appname"
                        ]
                    }
                }
            ]
        }
    ]
